datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum CampaignType {
  MARKETING
  ADVERTISEMENT
  GOVERNMENT
  POLITICIAN
}

enum StatusType {
  ACTIVE
  PAUSED
  EXPIRED
}

model Campaign {
  id         String       @id @default(uuid())
  name       String
  signUpDate DateTime     @default(now())
  startDate  DateTime
  endDate    DateTime
  status     StatusType
  category   CampaignType
}
